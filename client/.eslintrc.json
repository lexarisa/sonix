{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-vars": "error",
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
          ],
          "keyword-spacing": "error",
          "linebreak-style": "error",
          "quotes": [
            "error",
            "single"
          ],
          "semi": "error",
          "space-before-blocks": "error",
          "no-undef": "off",
          "no-unused-vars": "warn",
          "react/prop-types": "off"
    }
}
